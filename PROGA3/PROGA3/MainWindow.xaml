<Window x:Class="PROGA3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROGA3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnA" Content="Гласные" HorizontalAlignment="Left"  Margin="325,0,0,0"  VerticalAlignment="Center" Cursor="Hand" Click="btnA_Click" Grid.Row="1"/>
        <Button x:Name="btnB" Content="Согласные" HorizontalAlignment="Left"  Margin="419,0,0,0" VerticalAlignment="Center" Click="btnB_Click" Cursor="Hand" Grid.Row="1"/>
        <TextBox x:Name="tbI" HorizontalAlignment="Center" Margin="0,150,0,0" Text="Введите текст..." TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.RowSpan="2"/>
        <TextBlock x:Name="tbR" HorizontalAlignment="Center" Margin="0,250,0,0" Text="Результат" TextWrapping="Wrap" VerticalAlignment="Top" Grid.RowSpan="2"/>

    </Grid>
</Window>
